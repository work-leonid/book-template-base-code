<section class="max-w-5xl md:px-5 mx-auto ">
  <blockquote class="relative bg-stone-200 md:text-center p-8 md:p-16 mx-auto leading-relaxed mb-20">
	<span class="absolute block text-stone-100 leading-none text-[15em] font-header italic -top-5 -left-20 md:left-10">&quot;</span>

    <p class="max-w-3xl mb-10 leading-relaxed md:text-3xl relative mx-auto">
      <%= text %>
    </p>

	<cite>
      <a href="<%= link %>" target="_blank" class="flex font-bold font-header normal items-center justify-center gap-5 hover:opacity-90">
        <img src="<%= img %>" class="w-20 h-20 rounded-full" />
        <p><%= name %></p>
      </a>
    </cite>

  </blockquote>
</section>
